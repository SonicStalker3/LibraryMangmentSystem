<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.Views.Windows.AboutApplicationWindow"
        Title="О приложении"
        Width="700" 
        Height="300">
    <DockPanel>
        <Image Source="/Assets/app_ico.png" Stretch="UniformToFill" DockPanel.Dock="Left" Width="300" Height="300"/>
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center">Library Managment System</TextBlock>
            <TextBlock FontSize="12" HorizontalAlignment="Center">v. 0.0.1 alpha 011a</TextBlock>
            <Separator/>
            <TextBlock HorizontalAlignment="Center">Library Managment System</TextBlock>
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:Name="cancelButton" Content="Cancel" Click="CancelButton_Click" Margin="5"/>
            <Button x:Name="okButton" Content="OK" Click="OkButton_Click" Margin="5"/>
        </StackPanel>
    </DockPanel>
</Window>
